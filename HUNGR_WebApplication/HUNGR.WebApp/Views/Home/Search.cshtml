@model List<FoodTruck>;





@if (Model.Count() == 0)
{
    <h1>Sorry, we couldnt find anything related to "@ViewBag.SearchTerm"</h1>
    <h3><a asp-action="Index" asp-controller="Home">Return To The Home Screen</a> or try a different search</h3>
}
else
{
    <h1>Search Results for "@ViewBag.SearchTerm"</h1>
    <ul id="searchList" class="list-group">
        @foreach (var truck in Model)
        {
            var photoPath = "~/images/" + (truck.ProfileImage ?? "defaultProfileImage.png");
            //var reviewPhotoPath = "~/images/" + (Model.FoodTruckModel.ProfileImage ?? "defaultProfileImage.png");
            <li class="border my-1" style="list-style-type:none;">
                <a asp-action="Profile" asp-route-id="@truck.FoodTruckId">
                    <div class="row">
                        <div class="col">
                            <img src="@photoPath" class="img-thumbnail roundThumbnail" alt="ProfileImage" asp-append-version="true">
                        </div>
                        <div class="col align-self-center">
                            <h1>@truck.Name</h1>
                        </div>
                        <div class="col align-self-center">
                            <h1>@truck.FoodCat.GetDisplayName()</h1>
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>
