@model List<FoodTruck>;

@section Scripts{
    <script>
        $(document).ready(function () {
            $(function () {
                $("#searchBar").autocomplete({
                    source: "/Home/AutoComplete",
                    minLength: 1
                });
            }
            );
        })


    </script>
}

<form method="get" asp-action="Search" asp-controller="Home">
    <div class="input-group">
        <input id="searchBar" type="text" placeholder="Enter a Food Truck Name..." class="form-control" name="searchTerm" />
        <div class="input-group-append">
            <input type="submit" value="Search" class="btn btn-primary">
        </div>
    </div>
</form>



@if (Model.Count() == 0)
{
    <h1>Sorry, we couldnt find anything related to "@ViewBag.SearchTerm"</h1>
    <h3><a asp-action="Index" asp-controller="Home">Return To The Home Screen</a> or try a different search</h3>
}
else
{
    <h1>Search Results for "@ViewBag.SearchTerm"</h1>
    <ul id="searchList" class="list-group">
        @foreach (var truck in Model)
        {
            var photoPath = "~/images/" + (truck.ProfileImage ?? "defaultProfileImage.png");
            //var reviewPhotoPath = "~/images/" + (Model.FoodTruckModel.ProfileImage ?? "defaultProfileImage.png");
            <li class="border my-1" style="list-style-type:none;">
                <a asp-action="Profile" asp-controller="foodTrucks" asp-route-id="@truck.FoodTruckId" style="text-decoration: none; color:black;">
                    <div class="row">
                        <div class="col">
                            <img src="@photoPath" class="img-thumbnail roundThumbnail" alt="ProfileImage" asp-append-version="true">
                        </div>
                        <div class="col align-self-center">
                            <h1>@truck.Name</h1>
                        </div>
                        <div class="col align-self-center">
                            @if (truck.FoodCat != null)
                            {
                                <h1>@truck.FoodCat.GetDisplayName()</h1>
                            }
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>

}