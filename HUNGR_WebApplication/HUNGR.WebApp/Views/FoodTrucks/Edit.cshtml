@model HUNGR.WebApp.ViewModels.EditFoodTruckViewModel;

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/" + (Model.ExistingImagePath ?? "defaultProfileImage.png");
}

<h1>Edit</h1>

<h4>FoodTruck</h4>
<hr />
<div class="row">
    <div class="col">
        <form enctype="multipart/form-data" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodTruckId" />
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label asp-for="FoodTruckName" class=" control-label h2"></label>
                        <input asp-for="FoodTruckName" class="form-control" />
                        <span asp-validation-for="FoodTruckName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TruckBio" class=" control-labelh2"></label>
                        <textarea asp-for="TruckBio" class="form-control" rows="4" style="width:100%;" ></textarea>
                        <span asp-validation-for="TruckBio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FoodCategory" class="h2 control-label"></label>
                        <select asp-for="FoodCategory" class="custom-select"
                                asp-items="Html.GetEnumSelectList<FoodEnum.FoodCat>()">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="FoodCategory" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col">
                            <h2>Social Media Links</h2>
                        </div>
                    </div>


                    <div class="form-group">

                        <div class="row">
                            <div class="col-1"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></div>
                            <div class="col-11"><input asp-for="InstaLink" class="form-control" /></div>
                        </div>
                        <span asp-validation-for="InstaLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-1"><i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i></div>
                            <div class="col-11"><input asp-for="FacebookLink" class="form-control" /></div>
                        </div>
                        <span asp-validation-for="FacebookLink" class="text-danger"></span>
                    </div>
                    <div class="row d-flex justify-content-around">
                        <div class="d-inline-flex">
                            <a style="width:100px" class="btn btn-danger" asp-action="MyProfile" asp-controller="User">Cancel</a>
                        </div>
                        <div class="d-inline-flex">
                            <button style="width:100px" type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group row ">
                        <img src="@photoPath" class="img-thumbnail" asp-append-version="true" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <div class="custom-file">
                            <input asp-for="Image" class="form-control custom-file-input" />
                            <label class="custom-file-label">Click here to change photo...</label>
                        </div>
                        @*<span asp-validation-for="Image" class="text-danger"></span>*@
                    </div>
                </div>
            </div>
            
        </form>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        })
    </script>
}

