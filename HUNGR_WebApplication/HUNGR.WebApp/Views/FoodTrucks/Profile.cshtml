<div class="col-lg-12 border bg-light">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Reviews</h1>
        </div>
        <div class="col-lg-12 overflow-auto ">
            <ul id="trucksReviews" class="list-group">
                @foreach (var review in Model.FoodTruckModel.Reviews)
                {
                    <li class="border my-1" style="list-style-type:none;">

                        <div class="row">
                            <div class="col-1">
                                <a asp-action="UserProfile" asp-controller="Users" asp-route-UserId="@review.UserId">
                                    <img src="~/images/default-logo.png" class="img-thumbnail" alt="ProfileImage">
                                    <p>@review.UserId</p>
                                </a>
                            </div>
                            <div class="col-11 align-self-center">
                                <h3>@review.Title</h3>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col offset-1">
                                <p>@review.Body</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col offset-1">
                                <p>Rating: @review.Rating</p>
                            </div>
                        </div>

                    </li>
                }
            </ul>
        </div>
    </div>
</div>



