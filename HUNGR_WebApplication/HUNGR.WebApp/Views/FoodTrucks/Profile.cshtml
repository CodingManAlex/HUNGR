@model FoodTruck
@using HUNGR.WebApp.Components

<div class="row">
    <div class="col-3">
        <img src="~/images/defaultProfileImage.png" class="img-fluid" alt="Responsive image">
    </div>

    <div class="col-7">
        <div class="row">
            <div class="col">
                <h1>@Model.Name</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4>@Model.Bio</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                <h2>f</h2>
            </div>
            <div class="col-1">
                <h2>i</h2>
            </div>
        </div>
    </div>

    <div class="col-2">
        <div class="row">

            @if (Model.Reviews != null)
            {
                int sum = 0;
                int revCount = Model.Reviews.Count;
                foreach (var review in Model.Reviews)
                {
                    sum += review.Rating;
                }
                double avgRating = sum / revCount;
                <h1 class="display-3" id="foodTruckRating">@avgRating</h1>
            }
            else
            {
                <h1 class="display-3" id="foodTruckRating">NA</h1>
            }
        </div>
        <div class="row">
            <h4>Follow</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <h1 class="display-1">MAP</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <h1>Leave A Review</h1>
    </div>
</div>



<component type="typeof(ReviewList)" render-mode="ServerPrerendered"  />
@*<component type="typeof(ReviewList)" render-mode="ServerPrerendered" param-TruckReviews="Model.Reviews" />*@

<div class="card-columns">
    @foreach (var review in Model.Reviews)
    {
        <DisplayReview Review="review" ></DisplayReview>
    }

</div>


