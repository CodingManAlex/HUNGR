@model UserProfileViewModel

    @*<h1>User Profile @Model.UserId</h1>
    <h2>@Model.FirstName @Model.LastName</h2>*@
<div class="row">
    <div class="col">
        <img src="~/images/default-logo.png" class="img-thumbnail" alt="ProfileImage">
    </div>
    <div class="col">
        <h1>@Model.FirstName @Model.LastName</h1>
        <div class="row">
            <div class="col">
                <h4>@Model.City, @Model.Province</h4>
            </div>
        </div>
    </div>
    <div class="col">
        <h1>Favourite Foods</h1>
        <div class="row">
            <div class="col">
                @if (Model.FoodCat != 0 )
                {
                    <h4>@*@Model.FoodCat.GetDisplayName()*@ </h4>
                    <h4>@Model.FoodCat </h4>
                }
                else
                {
                    <h4>This user has not set a favourite food.</h4>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">

</div>
<div class="row">
    <div class="col"><h1>Favourite Trucks</h1></div>
</div>
<div class="card-deck">
    @foreach (var truck in Model.FavouriteTrucks)
    {
        <div class="card m-3">
            @*        <a asp-page="/FoodTrucks/FoodTruckProfile" asp-route-id="@truck.FoodTruckId">*@

            <a asp-action="Profile" asp-controller="FoodTrucks" asp-route-id="@truck.FoodTruckId">
                <img class="card-img-top" src="~/images/defaultProfileImage.png" alt="Card image cap">
            </a>
            <div class="card-body">
                <h3>@truck.Name</h3>
            </div>
        </div>
    }

</div>

<div class="row">
    <div class="col"><h1>Reviews</h1></div>
</div>
<div class="col-lg-12 overflow-auto ">
    <ul id="trucksReviews" class="list-group">
        @foreach (var review in Model.Reviews)
        {
            <li class="border my-1" style="list-style-type:none;">

                <div class="row">
                    <div class="col-1">
                        <a asp-action="Profile" asp-controller="FoodTrucks" asp-route-id="@review.FoodTruckId">
                            <img src="~/images/default-logo.png" class="img-thumbnail" alt="ProfileImage">
                        </a>
                    </div>
                    <div class="col-11 align-self-center">
                        <h3>@review.Title</h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col offset-1">
                        <p>@review.Body</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col offset-1">
                        <p>Rating: @review.Rating</p>
                    </div>
                </div>

            </li>
        }
    </ul>
</div>